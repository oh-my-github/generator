{
  "FILE": {
    "GENERATOR": {
      "SRC_TS": "generator/src/**/*.spec.ts",
      "SRC_D_TS": "generator/src/**/*.spec.d.ts",
      "SRC_JS": "generator/src/**/*.js",
      "SRC_JS_MAP": "generator/src/**/*.js.map",

      "TEST_TS": "generator/test/**/*.spec.ts",
      "TEST_D_TS": "generator/test/**/*.spec.d.ts",
      "TEST_JS": "generator/test/**/*.spec.js",
      "TEST_JS_MAP": "generator/test/**/*.spec.js.map",

      "BUILD_SRC_JS": "build/generator/src/**/*.js",
      "BUILD_TEST_JS": "build/generator/test/**/*.spec.js"
    },

    "VIEWER": {
      "ALL_FILES": "viewer/**/*",
      "ALL_FILES_JSX": "viewer/app/**/*.jsx",
      "ALL_FILES_SPEC": "viewer/app/**/*.spec.js",

      "ENTRY_JSX": "viewer/app/index.jsx",
      "ENTRY_HTML": "viewer/index.html",
      "ENTRY_CSS": "viewer/style/app.css",

      "BUILD_ENTRY_JS": "build/viewer/app/index.js",
      "BUILD_ENTRY_CSS": "build/viewer/style/app.css",
      "BUILD_TEST_JS": "build/viewer/app/**/*.spec.js"
    },

    "ALL_JS": "**/*.js",
    "ALL_JS_MAP": "**/*.js.map",
    "ALL_D_TS": "**/*.d.ts",

    "IGNORED_ALL_D_TS": "!**/*.d.ts",

    "PACKAGE_JSON": "package.json",
    "PROFILE_JSON": "oh-my-github.json",
    "PROFILE_TEMPLATE_JSON": "resource/oh-my-github.template.json"
  },

  "DIR": {
    "BOWER_COMPONENTS": "bower_components",
    "GENERATOR": "generator",
    "VIEWER": "viewer",

    "BUILD_GENERATOR": "build/generator",
    "BUILD_VIEWER": "build/viewer",

    "BUILD": "build",
    "RESOURCE": "resource",

    "BASE_SOURCE": "src",
    "BASE_TEST": "test",

    "DIST": "dist",
    "SPEC": "__specs__"
  },

  "ASSERTED_ENV": [
    "GITHUB_TOKEN"
  ]
}